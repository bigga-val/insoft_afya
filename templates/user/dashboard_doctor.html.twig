{% extends 'baseAdmin.html.twig' %}
{% block body %}
    <h3>Dashboard</h3>
    <div class="row">
        <div class="col-md-4">
            <h4>Mes Services</h4>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <td>#</td>
                        <td>Service</td>
                        <td>Hopital</td>
                        <td>Actions</td>
                    </tr>
                </thead>
                <tbody>
                {% set i = 0 %}
                {% for attribution in attributions %}
                    {% set i = i+1 %}
                    <tr>
                        <td>{{ i }}</td>
                        <td>{{ attribution.ServiceHopital.service.nomService }}</td>
                        <td>{{ attribution.ServiceHopital.hopital.nomHopital }}</td>
                        <td>
                            <a href="">View</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-md-4"></div>
        <div class="col-md-4"></div>
    </div>
{% endblock %}