{% extends 'baseAdmin.html.twig' %}

{% block title %}Rendezvous index{% endblock %}

{% block body %}
    <h1>Rendezvous index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Motif</th>
                <th>HeureRendezvous</th>
                <th>CreatedAt</th>
                <th>CreatedBy</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rendezvou in rendezvouses %}
            <tr>
                <td>{{ rendezvou.id }}</td>
                <td>{{ rendezvou.motif }}</td>
                <td>{{ rendezvou.HeureRendezvous ? rendezvou.HeureRendezvous|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ rendezvou.createdAt ? rendezvou.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ rendezvou.createdBy }}</td>
                <td>
                    <a href="{{ path('rendezvous_show', {'id': rendezvou.id}) }}">show</a>
                    <a href="{{ path('rendezvous_edit', {'id': rendezvou.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td class="text-danger text-center" colspan="6">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('rendezvous_new') }}">Create new</a>
{% endblock %}
