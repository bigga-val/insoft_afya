{% extends 'baseAdmin.html.twig' %}

{% block title %}Nouveau Rendez-vous{% endblock %}

{% block body %}
    <h1>Creer un nouveau Rendez-vous</h1>
{#    {{ include('rendezvous/_form.html.twig') }}#}
    <div class="container">
        <div class="row">

            <div class="col-md-6">
                <form action="" method="post">
                    <div class="row">
                        <div class="form-group form-row">

                            <input type="hidden" name="csrf_token" value="{{ csrf_token("csrf_token") }}">
                            <input type="hidden" name="choixID" value="{{ app.request.get('choix') }}">
                            <label for="">Choisir la date</label>
                            <input name="heurerdv" required type="datetime-local" class="form-control">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group form-row">
                            <label for="">Tapez le motif</label>
                            <textarea class="form-control" name="motifrdv" id="" cols="30" rows="10"></textarea>
                        </div>
                    </div>
                    <div>
                        <div class="form-group form-row">
                            <input type="submit" class="btn btn-sm btn-primary">
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <div class="card card">
                    <div class="card-header bg-default">
                        <h3>
                            Rendez-vous precedents
                        </h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-responsive">
                            <thead>

                                <tr>
                                    <th>#</th>
                                    <th>Date & Heure</th>
                                    <th>Motif</th>
                                    <th>Observation</th>
                                    <th></th>
                                </tr>

                            </thead>
                            <tbody>
                                {% set counter = 0 %}
                                {% for rdv in rendezvous %}
                                    {% set counter = counter + 1 %}
                                    <tr>
                                        <td>{{ counter }}</td>
                                        <td>{{ rdv.heurerendezvous|date('d-M-Y h:m') }}</td>
                                        <td>{{ rdv.motif }}</td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <a href="{{ path('rendezvous_index') }}">back to list</a>
{% endblock %}
