
{% extends "base.html.twig" %}
{% block body %}
    {% include './extensions/navbar.html.twig' %}
    <div class="container">
        <div class="row">
            <div class="panel">
                <div class="panel-header bg-primary">

                    <h3 class="text-left text-white text-center" href="">
                        Listes des Hopitaux
                    </h3>
                </div>
                <div class="panel-body">

                    <table class="table">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>NomHopital</th>
                            <th>Adresse</th>
                            <th>No Urgence</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set counter=1 %}
                        {% for hopital in hopitals %}
                            <tr>
                                <td>{{ counter }}</td>
                                <td>{{ hopital.NomHopital }}</td>
                                <td>{{ hopital.Adresse }}</td>
                                <td>{{ hopital.NoUrgence }}</td>
                                <td>
                                    <a href="{{ path('hopital_show', {'id': hopital.id}) }}">show</a>
                                    <a href="{{ path('hopital_edit', {'id': hopital.id}) }}">edit</a>
                                </td>
                            </tr>
                            {% set counter = counter+1 %}
                        {% else %}
                            <tr>
                                <td colspan="5">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <a class="" href="{{ path('hopital_new') }}">Create new</a>
    </div>

{% endblock %}
