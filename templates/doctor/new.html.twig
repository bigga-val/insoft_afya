                        <input type="text" class="form-control" required name="DoctorName">
                        <label for="">Matricule *</label>
                        <input type="text" class="form-control" required name="DoctorMatricule">
                        <label for="">Telephone *</label>
                        <input type="text" class="form-control" required name="Doctortelephone">
                        <label for="">Email *</label>
                        <input type="text" class="form-control" required name="DoctorEmail">
                        <label for="">Mot de passe *</label>
                        <input type="text" class="form-control" required name="DoctorPassword">
