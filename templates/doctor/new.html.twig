{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading bg-default">
                    Creer un Nouveau Docteur
                </div>
                <div class="panel-body">
                    <form action="" method="post">
                        <input type="hidden" value="{{ csrf_token('csrf_token') }}" name="csrf_token">
