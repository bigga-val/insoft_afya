{% extends 'baseAdmin.html.twig' %}

{% block title %}Discussion index{% endblock %}

{% block body %}
    <h1>Mes Discussions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreatedAt</th>
                <th>CreatedBy</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for discussion in discussions %}
            <tr>
                <td>{{ discussion.id }}</td>
                <td>{{ discussion.createdAt ? discussion.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ discussion.createdBy }}</td>
                <td>{{ discussion.status }}</td>
                <td>
                    <a href="{{ path('discussion_show', {'id': discussion.id}) }}">show</a>
                    <a href="{{ path('discussion_edit', {'id': discussion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="">Create new</a>
{% endblock %}
